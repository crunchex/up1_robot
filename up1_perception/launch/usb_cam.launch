<launch>
  <group ns="stereo">
    <node name="left" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="320" />
        <param name="image_height" value="240" />
        <param name="pixel_format" value="mjpeg" />
        <param name="camera_frame_id" value="left" />
        <param name="io_method" value="mmap" />
        <param name="camera_name" value="stereo_left" />
        <param name="camera_info_url" type="string" value="file://$(find up1_perception)/config/stereo_left.yaml" />
    </node>
    <node name="right" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="video_device" value="/dev/video1" />
        <param name="image_width" value="320" />
        <param name="image_height" value="240" />
        <param name="pixel_format" value="mjpeg" />
        <param name="camera_frame_id" value="right" />
        <param name="io_method" value="mmap" />
        <param name="camera_name" value="stereo_right" />
        <param name="camera_info_url" type="string" value="file://$(find up1_perception)/config/stereo_right.yaml" />
    </node>
  </group>
</launch>
