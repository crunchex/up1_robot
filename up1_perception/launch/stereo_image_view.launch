<launch>
  <group ns="stereo">
    <node name="left" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="320" />
        <param name="image_height" value="240" />
        <param name="pixel_format" value="mjpeg" />
        <param name="camera_frame_id" value="left" />
        <param name="io_method" value="mmap" />
        <param name="camera_name" value="stereo_left" />
        <param name="camera_info_url" type="string" value="file://$(find up1_perception)/config/stereo_left.yaml" />
    </node>
    <node name="right" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="video_device" value="/dev/video1" />
        <param name="image_width" value="320" />
        <param name="image_height" value="240" />
        <param name="pixel_format" value="mjpeg" />
        <param name="camera_frame_id" value="right" />
        <param name="io_method" value="mmap" />
        <param name="camera_name" value="stereo_right" />
        <param name="camera_info_url" type="string" value="file://$(find up1_perception)/config/stereo_right.yaml" />
    </node>
    <node name="stereo_image_proc" pkg="stereo_image_proc" type="stereo_image_proc">
      <param name="approximate_sync" value="true" />
      <param name="min_disparity" value="13" />
      <param name="disparity_range" value="32" />
      <param name="uniqueness_ratio" value="15" />
      <param name="texture_threshold" value="10" />
      <param name="speckle_size" value="300" />
      <param name="speckle_range" value="4" />
    </node>
  </group>

  <!-- <node name="image_view_left" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/stereo/left/image_raw" />
    <param name="autosize" value="true" />
  </node>
  <node name="image_view_right" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/stereo/right/image_raw" />
    <param name="autosize" value="true" />
  </node> -->

  <node name="image_view_stereo" pkg="image_view" type="stereo_view" respawn="false" output="screen">
    <remap from="stereo" to="stereo" />
    <remap from="image" to="image_rect_color" />
    <param name="autosize" value="true" />
    <param name="approximate_sync" value="true" />
    <param name="queue_size" value="10" />
  </node>
</launch>
